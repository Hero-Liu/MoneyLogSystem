@model List<Day1Homeowrk.Models.MoneyLog>

@{
    ViewBag.Title = "ChildHistory";
    Layout = null;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>類別</th>
        <th>日期</th>
        <th>金額</th>
    </tr>

    @{  
        var index = 0;
        foreach (var item in Model)
        {
            index++;
            <tr>
                <td>@index</td>
                <td>@item.LogType</td>
                <td>@item.Date</td>
                <td>@item.Money</td>
            </tr>
        }
    }

</table>
